<%- include("./layouts/header") %>
    <main class="Food-details">
        <h2><%= profile.firstName %> <%= profile.lastName %>'s Profile</h2>
        <div class="flex">
            <form action="/admin/logout" method="post" onsubmit="return confirm('Are you sure you want to log out')">
                <button class="create-account" type="submit">Logout</button> 
            </form>
            
        </div>
        <hr>
        <h2>Menu</h2>
        <section class="flex wrap">
            
         <% menus.forEach(function(menu, index) { %>
            
            <article class="product">
                <img src="<%= menu.imageUrl %>" alt="">
                <h3><%= menu.name %></h3>
                <div class="flex">
                    <p class="price"><%= menu.price %></p>
                    <p class="category"><%= menu.category.charAt(0).toUpperCase() + menu.category.slice(1) %></p>
                </div>
                <div class="flex">
                    <a class="order-food" href="/menus/<%= menu._id %>">View Food</a>
                    <a class="order-food" href="/menus/<%= menu._id %>/order">Order Food</a>
                </div>
                </article>
            <%  }) %>
        </section>
        </main>
    <%- include("./layouts/footer") %>